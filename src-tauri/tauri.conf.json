{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nhf-weakauras",
  "version": "0.1.1",
  "identifier": "com.nhf-weakauras.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "NHF Aura Manager",
        "width": 370,
        "height": 205,
        "backgroundColor": "#1e1e1e",
        "titleBarStyle": "Transparent",
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
